generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Song {
  id        Int      @id @default(autoincrement())
  title     String
  artist    String
  fileUrl   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Add these two new models for quiz sessions and results
model QuizSession {
  id           Int          @id @default(autoincrement())
  mode         String
  currentRound Int           @default(0)
  maxRounds    Int
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  results      QuizResult[]
}

model QuizResult {
  id            Int          @id @default(autoincrement())
  quizSessionId Int
  quizSession   QuizSession  @relation(fields: [quizSessionId], references: [id])
  songId        Int
  correct       Boolean
  timeTakenMs   Int
  createdAt     DateTime     @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  isAdmin   Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

